{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": false,
  },
  "include": [
    "index.d.ts",
    "src/**/*.ts",
    "**.d.ts",
    "src/**/**/*.ts",
    "test/**/*.ts",
    "actions.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}